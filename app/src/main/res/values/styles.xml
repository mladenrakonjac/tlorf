<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/secondaryColor</item>
        <item name="android:windowBackground">@color/primaryLightColor</item>
        <item name="android:windowFullscreen">true</item>

    </style>

    <style name="AppTheme.WhiteAccent">
        <item name="colorAccent">@color/secondaryColor</item> <!-- Whatever color you want-->
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="FullScreenDialogStyle" parent="android:Theme.DeviceDefault.Dialog.NoActionBar.MinWidth">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
    </style>


</resources>
